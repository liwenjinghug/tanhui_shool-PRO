page {
  height: 100vh;
}

.container {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 背景图与模糊 */
.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(8px);
  transform: scale(1.1); /* 消除边缘白边 */
}

/* 磨砂卡片容器 */
.glass-card {
  width: 86%;
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.header-section {
  text-align: center;
  margin-bottom: 50rpx;
}

.logo {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 38rpx;
  font-weight: 600;
  color: #2c3e50;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
}

/* 表单样式 */
.form-body {
  width: 100%;
}

.form-item {
  margin-bottom: 35rpx;
}

.row-group {
  display: flex;
  justify-content: space-between;
}

.half {
  width: 47%;
}

.label {
  font-size: 26rpx;
  color: #5d6d7e;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
  padding-left: 10rpx;
}

.input-inner, .picker-inner {
  height: 88rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.picker-inner {
  justify-content: space-between;
}

.ph {
  color: #bdc3c7;
}

.arrow {
  font-size: 18rpx;
  color: #95a5a6;
}

/* 按钮：古风黛青色 */
.submit-btn {
  margin-top: 20rpx;
  width: 100% !important;
  height: 96rpx;
  background: linear-gradient(135deg, #51bc51e5 0%, #298b4e 100%);
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 25rpx rgba(114, 213, 97, 0.249);
}

.submit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}