.top-banner {
  position: fixed; top: 0; left: 0; width: 100%; height: 260rpx;
  background: #17c385; z-index: -1;
}

.custom-nav { position: fixed; top: 0; left: 0; width: 100%; z-index: 100; height: 44px; }
.nav-content { height: 44px; display: flex; align-items: center; }
.back-btn { padding: 20rpx 40rpx; }
.back-arrow { 
  width: 20rpx; height: 20rpx; 
  border-left: 4rpx solid #fff; border-bottom: 4rpx solid #fff; 
  transform: rotate(45deg); 
}
.nav-title { 
  color: #fff; font-size: 32rpx; font-weight: 600; 
  position: absolute; left: 50%; transform: translateX(-50%); 
}

