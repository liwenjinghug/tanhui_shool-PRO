.user-avatar { width: 130rpx; height: 130rpx; border-radius: 50%; border: 4rpx solid #fff; }
.camera-tag {
  position: absolute; bottom: 0; right: 0; background: #333; color: #fff;
  font-size: 18rpx; width: 36rpx; height: 36rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
