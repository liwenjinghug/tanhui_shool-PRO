page { height: 100vh; display: flex; flex-direction: column; font-family: sans-serif; }
.container { height: 100%; display: flex; align-items: center; justify-content: center; position: relative; }
.page-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; filter: blur(8px); transform: scale(1.1); }
.login-card { width: 85%; background: rgba(255,255,255,0.9); backdrop-filter: blur(10px); border-radius: 40rpx; padding: 60rpx 40rpx; display: flex; flex-direction: column; align-items: center; }
.title-area { text-align: center; margin-bottom: 60rpx; }
.app-name { font-size: 44rpx; font-weight: 800; color: #2e7d32; display: block; }
.app-desc { font-size: 26rpx; color: #666; }
.avatar-section { display: flex; flex-direction: column; align-items: center; margin-bottom: 50rpx; }
.avatar-wrapper { padding: 0; width: 160rpx !important; height: 160rpx !important; border-radius: 50%; background: #fff; border: 6rpx solid #fff; }
.avatar { width: 100%; height: 100%; border-radius: 50%; }
.tip-text { font-size: 24rpx; color: #888; margin-top: 20rpx; }
.input-section { width: 100%; background: #f1f8e9; border-radius: 50rpx; padding: 20rpx 40rpx; display: flex; align-items: center; box-sizing: border-box; margin-bottom: 60rpx; }
.label { font-size: 28rpx; font-weight: bold; color: #2e7d32; margin-right: 20rpx; }
.nick-input { flex: 1; height: 60rpx; }
.login-btn { width: 100% !important; background: linear-gradient(135deg, #66bb6a 0%, #2e7d32 100%); color: #fff; border-radius: 50rpx; font-weight: bold; }